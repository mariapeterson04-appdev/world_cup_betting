<div class="page-header">
  <h1>
    Matches groups
    <a href="/matches_groups/new" class="btn btn-lg btn-success">New Matches group</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "matches_groups_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :team_one_cont, "Team one contains" %>
    <%= f.text_field :team_one_cont, :class => "form-control", :placeholder => "Team one contains" %>
  </div>

<div class="form-group">
    <%= f.label :winner_cont, "Winner contains" %>
    <%= f.text_field :winner_cont, :class => "form-control", :placeholder => "Winner contains" %>
  </div>

<div class="form-group">
  <%= f.label :goals_two, "Goals two" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :goals_two_gteq, :class => "form-control", :placeholder => "Goals two greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :goals_two_lteq, :class => "form-control", :placeholder => "Goals two less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :goals_one, "Goals one" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :goals_one_gteq, :class => "form-control", :placeholder => "Goals one greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :goals_one_lteq, :class => "form-control", :placeholder => "Goals one less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :groupletter_cont, "Groupletter contains" %>
    <%= f.text_field :groupletter_cont, :class => "form-control", :placeholder => "Groupletter contains" %>
  </div>

<div class="form-group">
          <%= f.label :date, "Date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='dategteqPicker'>
                  <%= f.text_field :date_gteq, :class => "form-control", :placeholder => "Date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='datelteqPicker'>
                  <%= f.text_field :date_lteq, :class => "form-control", :placeholder => "Date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#dategteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#dategteqPicker').on("dp.change", function (e) {
                  $('#datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#datelteqPicker').on("dp.change", function (e) {
                  $('#dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :team_two_cont, "Team two contains" %>
    <%= f.text_field :team_two_cont, :class => "form-control", :placeholder => "Team two contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
  <%= f.label :users_score, "Result Users score" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :result_users_score_gteq, :class => "form-control", :placeholder => "Result Users score greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :result_users_score_lteq, :class => "form-control", :placeholder => "Result Users score less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
      <%= f.label :users_email_cont, "User email contains" %>
      <%= f.text_field :users_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/matches_groups" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#matches_groups_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Team one</th>
        <th>Team two</th>
        <th>Date</th>
        <th>Location</th>
        <th>Groupletter</th>
        <th>City</th>
        <th>Goals one</th>
        <th>Goals two</th>
        <th>Winner</th>
        <th>Actions</th>
      </tr>

      <% @matches_groups.each do |matches_group| %>
      <tr>
        <td><%= matches_group.team_one %></td>
        <td><%= matches_group.team_two %></td>
        <td><%= matches_group.date %></td>
        <td><%= matches_group.location %></td>
        <td><%= matches_group.groupletter %></td>
        <td><%= matches_group.city %></td>
        <td><%= matches_group.goals_one %></td>
        <td><%= matches_group.goals_two %></td>
        <td><%= matches_group.winner %></td>
        <td>
          <a href="/matches_groups/<%= matches_group.id %>" class="btn btn-primary">Show</a>
          <a href="/matches_groups/<%= matches_group.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_matches_group/<%= matches_group.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @matches_groups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>