<div class="page-header">
  <h1>
    Bets groups
    <a href="/bets_groups/new" class="btn btn-lg btn-success">New Bets group</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "bets_groups_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :winner_cont, "Winner contains" %>
    <%= f.text_field :winner_cont, :class => "form-control", :placeholder => "Winner contains" %>
  </div>

<div class="form-group">
          <%= f.label :date, "Date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='dategteqPicker'>
                  <%= f.text_field :date_gteq, :class => "form-control", :placeholder => "Date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='datelteqPicker'>
                  <%= f.text_field :date_lteq, :class => "form-control", :placeholder => "Date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#dategteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#dategteqPicker').on("dp.change", function (e) {
                  $('#datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#datelteqPicker').on("dp.change", function (e) {
                  $('#dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :team_two_cont, "Team two contains" %>
    <%= f.text_field :team_two_cont, :class => "form-control", :placeholder => "Team two contains" %>
  </div>

<div class="form-group">
    <%= f.label :team_one_cont, "Team one contains" %>
    <%= f.text_field :team_one_cont, :class => "form-control", :placeholder => "Team one contains" %>
  </div>

<div class="form-group">
  <%= f.label :bet_team_two, "Bet team two" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :bet_team_two_gteq, :class => "form-control", :placeholder => "Bet team two greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :bet_team_two_lteq, :class => "form-control", :placeholder => "Bet team two less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :bet_team_one, "Bet team one" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :bet_team_one_gteq, :class => "form-control", :placeholder => "Bet team one greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :bet_team_one_lteq, :class => "form-control", :placeholder => "Bet team one less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
  <%= f.label :users_score, "Result Users score" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :result_users_score_gteq, :class => "form-control", :placeholder => "Result Users score greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :result_users_score_lteq, :class => "form-control", :placeholder => "Result Users score less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
      <%= f.label :match_team_one_cont, "MatchesGroup team_one contains" %>
      <%= f.text_field :match_team_one_cont, :class => "form-control", :placeholder => "MatchesGroup team_one contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/bets_groups" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#bets_groups_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Match</th>
        <th>Bet team one</th>
        <th>Bet team two</th>
        <th>Team one</th>
        <th>Team two</th>
        <th>Date</th>
        <th>Winner</th>
        <th>Actions</th>
      </tr>

      <% @bets_groups.each do |bets_group| %>
      <tr>
        <td>
          <% if bets_group.user.present? %>
            <a href="/users/<%= bets_group.user.id %>">
              <%= bets_group.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if bets_group.match.present? %>
            <a href="/matches_groups/<%= bets_group.match.id %>">
              <%= bets_group.match.team_one %>
            </a>
          <% end %>
        </td>
        <td><%= bets_group.bet_team_one %></td>
        <td><%= bets_group.bet_team_two %></td>
        <td><%= bets_group.team_one %></td>
        <td><%= bets_group.team_two %></td>
        <td><%= bets_group.date %></td>
        <td><%= bets_group.winner %></td>
        <td>
          <a href="/bets_groups/<%= bets_group.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == bets_group.user %>
            <a href="/bets_groups/<%= bets_group.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_bets_group/<%= bets_group.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bets_groups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
