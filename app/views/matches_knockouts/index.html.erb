<div class="page-header">
  <h1>
    Matches knockouts
    <a href="/matches_knockouts/new" class="btn btn-lg btn-success">New Matches knockout</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Team one</th>
        <th>Team two</th>
        <th>Date</th>
        <th>Location</th>
        <th>Round</th>
        <th>City</th>
        <th>Goals one</th>
        <th>Goals two</th>
        <th>Winner</th>
        <th>Actions</th>
      </tr>

      <% @matches_knockouts.each do |matches_knockout| %>
      <tr>
        <td><%= matches_knockout.team_one %></td>
        <td><%= matches_knockout.team_two %></td>
        <td><%= matches_knockout.date %></td>
        <td><%= matches_knockout.location %></td>
        <td><%= matches_knockout.round %></td>
        <td><%= matches_knockout.city %></td>
        <td><%= matches_knockout.goals_one %></td>
        <td><%= matches_knockout.goals_two %></td>
        <td><%= matches_knockout.winner %></td>
        <td>
          <a href="/matches_knockouts/<%= matches_knockout.id %>" class="btn btn-primary">Show</a>
          <a href="/matches_knockouts/<%= matches_knockout.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_matches_knockout/<%= matches_knockout.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @matches_knockouts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>